<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThoughtDef>
    <defName>HeldHuman</defName>
    <workerClass>HeldHuman.Def.ThoughtWorker_.ThoughtWorker_HeldHuman</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>held human</label>
        <description>I was caught with my limbs tied up.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
      <li>
        <label>long-term held human</label>
        <description>I've been tied up for too long. I can feel nothing.</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
      <li>
        <label>being treated as a entity</label>
        <description>I'm not a entity.</description>
        <baseMoodEffect>-30</baseMoodEffect>
      </li>
      <li>
        <label>human-like entity</label>
        <description>...</description>
        <baseMoodEffect>-40</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>HaveBeenHeldHuman</defName>
    <durationDays>15</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>have been held</label>
        <description>I've been held with my limbs tied up like a entity.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>